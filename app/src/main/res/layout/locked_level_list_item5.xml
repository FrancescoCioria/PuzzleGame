<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You need 70 Points"
        android:id="@+id/textViewNeededPoints"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemLayout"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/textViewNeededPoints">


        <RelativeLayout
            android:id="@+id/level1"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:layout_height="50dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="1"
                android:background="#ffff8a3a"
                android:gravity="center"
                android:id="@+id/textViewIndex1"
                android:textSize="25sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/level2"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="2"
                android:background="#ffff8a3a"
                android:gravity="center"
                android:id="@+id/textViewIndex2"
                android:textSize="25sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/level3"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="3"
                android:background="#ffff8a3a"
                android:gravity="center"
                android:id="@+id/textViewIndex3"
                android:textSize="25sp"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/level4"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:layout_height="50dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="4"
                android:background="#ffff8a3a"
                android:gravity="center"
                android:id="@+id/textViewIndex4"
                android:textSize="25sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/level5"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:layout_height="50dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="5"
                android:background="#ffff8a3a"
                android:gravity="center"
                android:id="@+id/textViewIndex5"
                android:textSize="25sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>